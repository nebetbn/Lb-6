#include <iostream>
#include <vector>
#include <numeric>

// Функція для прискорення вводу/виводу
void fast_io() {
    std::ios_base::sync_with_stdio(false);
    std::cin.tie(NULL);
}

int main() {
    fast_io();

    int n;
    std::cin >> n;

    std::vector<int> z(n);
    for (int i = 0; i < n; ++i) {
        std::cin >> z[i];
    }

    std::vector<int> p(n, 0);

    for (int i = 1; i < n; ++i) {
        if (z[i] > 0) {
            // Оптимізований O(n) алгоритм.
            // Ми "зафарбовуємо" значення префікс-функції.
            // Якщо для p[i+j] вже встановлено краще значення,
            // то для менших j тим більше, тому можна перервати цикл.
            for (int j = z[i] - 1; j >= 0; --j) {
                if (p[i + j] > 0) {
                    break;
                }
                p[i + j] = j + 1;
            }
        }
    }

    for (int i = 0; i < n; ++i) {
        std::cout << p[i] << (i == n - 1 ? "" : " ");
    }
    std::cout << std::endl;

    return 0;
}
